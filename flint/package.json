{
  "name": "flint-lsp",
  "displayName": "Flint Language Support",
  "description": "Syntax highlighting and Language Server support for the Flint programming language",
  "version": "0.2.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "publisher": "zweiler1",
  "repository": {
    "type": "git",
    "url": "https://github.com/flint-lang/vscode-extension"
  },
  "icon": "logo.png",
  "activationEvents": [
    "onLanguage:flint"
  ],
  "main": "./src/extension.js",
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "contributes": {
    "configuration": {
      "title": "Flint",
      "properties": {
        "flint.languageServer.path": {
          "type": "string",
          "default": "fls",
          "description": "Path to the Flint Language Server executable"
        },
        "flint.languageServer.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Flint Language Server"
        }
      },
      "configurationDefaults": {
        "[flint]": {
          "editor.insertSpaces": false,
          "editor.tabSize": 4
        }
      }
    },
    "languages": [
      {
        "id": "flint",
        "aliases": [
          "Flint",
          "flint"
        ],
        "extensions": [
          ".ft"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./icons/flint.svg",
          "light": "./icons/flint.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "flint",
        "scopeName": "source.flint",
        "path": "./syntaxes/flint.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "Flint Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/flint-color-theme.json"
      }
    ]
  }
}
