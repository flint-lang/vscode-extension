{
  "name": "Flint Theme",
  "type": "dark",
  "colors": {
    "editorGroup.border": "#4f5d64",
    "sideBar.background": "#373d4a",
    "activityBar.background": "#2f343f",
    "statusBar.background": "#2f343f",
    "editor.background": "#1f2429",
    "window.activeBorder": "#2f343f",
    "window.inactiveBorder": "#4f5d64",
  },
  "tokenColors": [
    {
      "scope": "keyword.control",
      "settings": {
        "foreground": "#ac2653",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "keyword.operator",
      "settings": {
        "foreground": "#A5A5A5" // Light grey for operators
      }
    },
    {
      "scope": "keyword.declaration",
      "settings": {
        "foreground": "#be2b2b", // Muted reddish-orange for `def`, `data`
        "fontStyle": "bold"
      }
    },
    {
      "scope": "storage.modifier",
      "settings": {
        "foreground": "#be2b2b",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "storage.type", // primitive types
      "settings": {
        "foreground": "#ffbf66",
        //"fontStyle": "bold"
      }
    },
    {
      "scope": "entity.name.function",
      "settings": {
        "foreground": "#00b5b5",
        //"fontStyle": "bold"
      }
    },
    {
      "scope": "entity.name.type",
      "settings": {
        "foreground": "#c46827", // Type names
        "fontStyle": "bold"
      }
    },
    {
      "scope": "constant.language",
      "settings": {
        "foreground": "#DAA520", // Softer orange for `true`, `false`
      }
    },
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#E06645" // Mellowed tomato red for numbers
      }
    },
    {
      "scope": "comment",
      "settings": {
        "foreground": "#8A8A8A", // Slightly lighter gray for readability
        "fontStyle": "italic"
      }
    },
    {
      "scope": "string.quoted",
      "settings": {
        "foreground": "#ffd57a" // Less saturated salmon for strings
      }
    },
    {
      "scope": "variable.other",
      "settings": {
        "foreground": "#fffde6" // Less intense burnt orange for variables
      }
    },
    {
      "scope": "identifier.field",
      "settings": {
        "foreground": "#BF593E" // Softer burnt orange for struct fields
      }
    },
    {
      "scope": "identifier.constant",
      "settings": {
        "foreground": "#B05035" // Warmer red-orange for uppercase constants
      }
    },
    {
      "scope": "operator",
      "settings": {
        "foreground": "#C27B50" // Muted brown-orange for operators
      }
    },
    {
      "scope": "punctuation",
      "settings": {
        "foreground": "#A5A5A5" // Slightly lighter gray for punctuation
      }
    }
  ]
}
